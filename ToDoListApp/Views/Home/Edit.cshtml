@model GroceryItem

@{
    ViewData["Title"] = "Edit";
}

<h4>Edit item</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group mb-3">
                <label asp-for="Text" class="control-label"></label>
                <input asp-for="Text" class="form-control" />
                <span asp-validation-for="Text" class="text-danger"></span>
            </div>
             <div class="form-group">
               
                 <label asp-for="Category" class="control-label"></label>
                <td>
@Html.DropDownList("Category", new List<SelectListItem>
{
   new SelectListItem{ Text="Vegetable", Value = "Vegetable" },
   new SelectListItem{ Text="Fruit", Value = "Fruit" },
   new SelectListItem{ Text="Meat", Value = "Meat" },
   new SelectListItem{ Text="Dairy", Value = "Dairy" },
   new SelectListItem{ Text="Spices", Value = "Spices" },
   new SelectListItem{ Text="Seafood", Value = "Seafood" },
      new SelectListItem{ Text="Other", Value = "Other" },

})
</td>
                <span asp-validation-for="Text" class="text-danger"></span>
            </div>
             <div class=" form-group">

                  <label asp-for="Qty" class="control-label"></label>
                <input asp-for="Qty" class="form-control" type = "number" />
                <span asp-validation-for="Qty" class="text-danger"></span>
            </div>
             <div class=" form-group"> 

                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" type = "number" > 
                <span asp-validation-for="Price" class="text-danger"></span>
                
            </div>
            <div class="form-group form-check mb-3">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsCompleted" /> @Html.DisplayNameFor(model => model.IsCompleted)
                </label>
            </div>
            <div class="form-group mb-3">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>                                                                                                                                                             

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}